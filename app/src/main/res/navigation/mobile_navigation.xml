<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.muzpleer.ui.player.PlayerFragment"
        android:label="Воспроизведение" />
    <fragment
        android:id="@+id/songFragment"
        android:name="com.example.muzpleer.ui.local.frags.SongFragment"
        android:label="Музыкальные треки" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.muzpleer.home.HomeFragment"
        android:label="Аудиоплеер" >
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
            <action
            android:id="@+id/action_homeFragment_to_tabsFragment"
            app:destination="@id/tabsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_tabsLocalFragment"
            app:destination="@id/tabLocalFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.muzpleer.setting.SettingsFragment"
        android:label="Настройки" />
    <fragment
        android:id="@+id/tabsFragment"
        android:name="com.example.muzpleer.ui.my.MyTabsFragment"
        android:label="Моя музыка" >
        <action
            android:id="@+id/action_tabsFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/tabLocalFragment"
        android:name="com.example.muzpleer.ui.local.TabLocalFragment"
        android:label="Музыка в телефоне" >
        <action
            android:id="@+id/action_tabsLocalFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.muzpleer.ui.local.frags.AlbumFragment"
        android:label="AlbumFragment" />
    <fragment
        android:id="@+id/artistsFragment"
        android:name="com.example.muzpleer.ui.local.frags.ArtistsFragment"
        android:label="ArtistsFragment" />
    <fragment
        android:id="@+id/folderFragment"
        android:name="com.example.muzpleer.ui.local.frags.FolderFragment"
        android:label="FolderFragment" />
    <fragment
        android:id="@+id/alltracksFragment"
        android:name="com.example.muzpleer.ui.local.frags.SongListFragment"
        android:label="Музыкальные треки" >
        <action
            android:id="@+id/action_alltracksFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/myKingsFragment"
        android:name="com.example.muzpleer.ui.my.frags.MyKingsFragment"
        android:label="MyKingsFragment" />
    <fragment
        android:id="@+id/myTracksFragment"
        android:name="com.example.muzpleer.ui.my.frags.MyTracksFragment"
        android:label="MyTracksFragment" />


</navigation>