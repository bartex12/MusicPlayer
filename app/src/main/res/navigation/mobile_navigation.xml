<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/tracksFragment"
        android:name="com.example.muzpleer.ui.tracks.TracksFragment"
        android:label="TracksFragment" >
        <action
            android:id="@+id/action_tracksFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_tracksFragment_to_localFragment"
            app:destination="@id/localFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.muzpleer.ui.player.PlayerFragment"
        android:label="PlayerFragment" />
    <fragment
        android:id="@+id/localFragment"
        android:name="com.example.muzpleer.ui.local.LocalFragment"
        android:label="LocalFragment" >
        <action
            android:id="@+id/action_localFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_localFragment_to_tracksFragment"
            app:destination="@id/tracksFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.muzpleer.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_localFragment"
            app:destination="@id/localFragment" />
        <action
            android:id="@+id/action_homeFragment_to_tracksFragment"
            app:destination="@id/tracksFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_kingsFragment"
            app:destination="@id/kingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.muzpleer.setting.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/kingsFragment"
        android:name="com.example.muzpleer.ui.tracks.KingsFragment"
        android:label="KingsFragment" >
        <action
            android:id="@+id/action_kingsFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>


</navigation>